#include <iostream>
using namespace std;

int main()
{

    //data type

    int yearOfBirth = 1999;
    char gender = 'm';
    bool isOlderThan18 = true;
    float averageGrad = 4.5;
    double balance = 45678967445;

    cout << "Size of int is " << sizeof(int) << " bytes\n";
    // 4 bytes

    cout << "Int Min Value is: " << INT_MIN << endl;
    // -1, -2, -3, ...., -2147483648

    cout << "Int Max Value is: " << INT_MAX << endl;
    // 0, +1, +2, +3, .... ,+2147483647

    cout << "Size of unsinged int is: " << sizeof(unsigned) << " bytes\n" << endl;
    // 4 bytes

    cout << "Size of bool is: " << sizeof(bool) << " bytes\n" << endl;
    // 1 byte

   cout << "Size of char is: " << sizeof(char) << " bytes\n" << endl;
    // 1 bytes

    cout << "Size of float is: " << sizeof(float) << " bytes\n" << endl;
    // 4 bytes

    cout << "Size of double is: " << sizeof(double) << " bytes\n" << endl;
    
    
    system("pause>0");
}
